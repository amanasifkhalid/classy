#!/bin/bash
# classydb

# Stop on errors
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

case $1 in
  "create")
    sqlite3 classy.db < sql/schema.sql
    ;;

  "destroy")
    rm -rf classy.db
    ;;
 
  *)
    usage
    exit 1
    ;;
esac
